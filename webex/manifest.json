{
  "name": "Textern.tb",
  "description": "Edit text in your favourite external editor!",
  "homepage_url": "https://github.com/presuku/textern",
  "manifest_version": 2,
  "version": "0.1",
  "author": "presuku",
  "applications": {
    "gecko": {
      "id": "textern.tb@example.com",
      "strict_min_version": "78.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },
  "compose_action": {
    "default_title": "textern.tb",
    "theme_icons": [
      {
        "light": "images/pen.svg",
        "dark": "images/pen_dark.svg",
        "size": 16
      },
      {
        "light": "images/pen.svg",
        "dark": "images/pen_dark.svg",
        "size": 32
      }
    ]
  },
  "commands": {
    "_execute_compose_action": {
      "description": "Launch external editor from compose window",
      "suggested_key": {
        "default": "Ctrl+E"
      }
    }
  },
  "options_ui": {
      "page": "options.html"
  },
  "permissions": ["notifications", "nativeMessaging", "storage", "compose"],
  "icons": {
    "64": "images/pen.svg",
    "32": "images/pen.svg",
    "16": "images/pen.svg"
  }
}
